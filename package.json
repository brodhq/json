{
    "name": "root",
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "bump": "ncu -u --deep && npm update && npm install && lerna bootstrap",
        "pack": "npm run bump && git add -A && git commit -am \"packed\" --allow-empty && lerna version patch --yes --force-publish",
        "dev": "lerna run watch --stream --parallel",
        "build": "lerna run build --stream",
        "start": "lerna run start --stream",
        "release:patch": "git add -A && git commit -am \"released\" --allow-empty && lerna version patch --yes --force-publish",
        "docs": "npm run docs:prepare && npm run docs:generate && npm run docs:concat && npm run docs:cleanup",
        "docs:prepare": "rm -rf docs -r && rm -rf tmp && mkdir docs",
        "docs:generate": "typedoc --readme none --disableSources --out tmp packages/json-main/lib/index.ts",
        "docs:concat": "concat-md --file-name-as-title --dir-name-as-title --debug tmp > docs/README.md",
        "docs:cleanup": "rm -rf tmp",
        "test:coverage": "jest --collect-coverage",
        "test": "jest",
        "test:unit": "jest --testPathIgnorePatterns packages/json-e2e",
        "test:e2e": "jest \"packages/json-e2e\"",
        "watch": "jest --watch",
        "watch:e2e": "jest \"packages/json-e2e\" --watch",
        "watch:protocol": "jest \"packages/json-protocol\" --watch",
        "watch:fetch": "jest \"packages/json-fetch\" --watch",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^19.0.0",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@rollup/plugin-typescript": "^8.2.1",
        "@types/jest": "^26.0.23",
        "@types/jsonpath": "^0.2.0",
        "@types/rimraf": "^3.0.0",
        "autobind-decorator": "^2.4.0",
        "concat-md": "^0.3.5",
        "eslint": "^7.27.0",
        "file-url": "^4.0.0",
        "husky": "^6.0.0",
        "inversify": "^5.1.1",
        "is-generator-function": "^1.0.9",
        "ix": "^4.3.1",
        "jest": "^27.0.4",
        "jsonpath": "^1.1.1",
        "lerna": "^4.0.0",
        "npm-check-updates": "^11.6.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rollup": "2.50.6",
        "rollup-plugin-dts": "^3.0.2",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.2",
        "ts-loader": "^9.2.2",
        "ts-node": "^10.0.0",
        "typedoc": "^0.20.36",
        "typedoc-plugin-markdown": "^3.9.0",
        "typescript": "4.2.4",
        "zod": "^3.1.0"
    }
}
